<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <!--persistence-unit - тут указываем название экземпляра нашей orm т.е подключения к конкретной БД -->
    <persistence-unit name="db">

                <!-- Тип JPA провайдера, я использую hibernate-->
                <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

                <!-- Тут перечисляю Entity классы которые будем использовать для работы с БД-->
                <class>main.java.system.entity.User</class>

                <properties>
                    <!-- Параметр означает что таблицы будут генерироваться аавтоматически-->

                    <!-- Стандартные JDBC параметры для подключения-->
                    <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
                    <property name="javax.persistence.jdbc.url" value="jdbc:mysql://mysql99.1gb.ru:3306/gb_db_nikbali" />
                    <property name="javax.persistence.jdbc.user" value="gb_db_nikbali" />
                    <property name="javax.persistence.jdbc.password" value="3c52724479a" />
                    <property name="hibernate.hbm2ddl.auto" value = "update"/>
                </properties>
    </persistence-unit>

</persistence>